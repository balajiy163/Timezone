{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "name",
    "Location"
  ],
  "properties": {
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "The Name Schema",
      "default": "",
      "examples": [
        "BigBasket"
      ],
      "pattern": "^(.*)$"
    },
    "Location": {
      "$id": "#/properties/Location",
      "type": "string",
      "title": "The Location Schema",
      "default": "",
      "examples": [
        "Bangalore"
      ],
      "pattern": "^(.*)$"
    }
  }
}